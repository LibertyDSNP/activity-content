{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
      "rootDir": "./src",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "esnext",
      "noImplicitAny": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": false,
      "strict": true,
      "skipLibCheck": true,
      "target": "es2022",
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "ts-node": {
      "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules/**", "src/test/**", "src/test/importTest/**", "./scripts/**", "**/*.test.ts", "**/*.spec.ts", "./dist/**", "./dangerfile.ts"]
}
